                        {
                            Html.RenderPartial("_PayrollRecordListWithExpiringIndicator", Model.PayrollProfileExpiringDictionary, new ViewDataDictionary() { { "outletId", Model.Outlet.Id } });
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}
else
