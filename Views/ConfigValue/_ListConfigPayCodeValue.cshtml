@model IEnumerable<CBMS.Models.Config.ConfigPayCodeValueModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHourlyRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsWeeklyRate)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsWeeklyRate)
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "EditConfigPayCodeValue", new { configPayCodeValueId = item.Id }, new AjaxOptions { OnBegin = "OnBegin", OnComplete = "ShowEditConfigPayCodeValueModal", HttpMethod = "GET", UpdateTargetId = "divEditConfigPayCodeValue" }, new { @class = "btn btn-default" })
                    @Ajax.ActionLink("Delete", "DeleteConfigPayCodeValue", new { configPayCodeValueId = item.Id }, new AjaxOptions { OnBegin = "OnBegin", OnComplete = "OnComplete", HttpMethod = "POST", Confirm = "Are you sure you want to deactivate this item?", UpdateTargetId = "PayCodeValueList" }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>No Data return.</td>
            <td></td>
            <td></td>
        </tr>
    }
</table>

