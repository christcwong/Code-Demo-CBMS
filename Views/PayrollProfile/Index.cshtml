@model IEnumerable<CBMS.Models.Payroll.PayrollProfileModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payroll</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Outlet.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryLowerBound)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryUpperBound)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidUntil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObjectCreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObjectUpdateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Outlet.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalaryLowerBound)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalaryUpperBound)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValidUntil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObjectCreateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObjectUpdateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
