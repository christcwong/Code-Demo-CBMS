@model CBMS.Models.Config.ConfigShiftTypeModel

@if (Model != null)
{
    using (Ajax.BeginForm("EditConfigShiftType", new AjaxOptions { OnBegin = "OnBegin", OnComplete = "HideEditConfigShiftTypeModal", HttpMethod = "POST", UpdateTargetId = "ShiftTypeList" }))
    {
        
        <div class="modal fade" id="EditConfigShiftTypeModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Edit ShiftType</h4>
                    </div>
                    <div class="modal-body">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label>Shift Type Name: </label>
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Shift Type Name" } })
                        </div>
                        <div class="form-group">
                            <label>Shift Start Time: </label>
                            @Html.EditorFor(m => m.StartHour, new { htmlAttributes = new { @class = "form-control", @placeholder = "Shift Start Time" } })
                        </div>
                        <div class="form-group">
                            <label>Shift End Time: </label>
                            @Html.EditorFor(m => m.EndHour, new { htmlAttributes = new { @class = "form-control", @placeholder = "Shift End Time" } })
                        </div>
                        <div class="form-group">
                            <label>Break Time : (Hours) </label>
                            @Html.EditorFor(m => m.BreakTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Break Time" } })
                        </div>
                        <div class="form-group">
                            <label>Total Working Hours: </label>
                            @Html.EditorFor(m => m.TotalHour, new { htmlAttributes = new { @class = "form-control", @placeholder = "Total Working Hours" } })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    }
}