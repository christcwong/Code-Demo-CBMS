@model CBMS.Models.Config.ConfigPayCodeValueModel

@if (Model != null)
{
    using (Ajax.BeginForm("EditConfigPayCodeValue", new AjaxOptions { OnBegin = "OnBegin", OnComplete = "HideEditConfigPayCodeValueModal", HttpMethod = "POST", UpdateTargetId = "PayCodeValueList" }))
    {

        <div class="modal fade" id="EditConfigPayCodeValueModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Edit PayCodeValue</h4>
                    </div>
                    <div class="modal-body">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label>PayCode Name: </label>
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "PayCode Name" } })
                        </div>
                        <div class="form-group">
                            <label>PayCode Value ($): </label>
                            @Html.EditorFor(m => m.Value, new { htmlAttributes = new { @class = "form-control", @placeholder = "PayCode Value ($)" } })
                        </div>
                        <div class="form-group">
                            <label>Hourly Rate ?: </label>
                            @Html.CheckBoxFor(m => m.IsHourlyRate, new { htmlAttributes = new { @class = "form-control", @checked = true } })
                        </div>
                        <div class="form-group">
                            <label>Weekly Rate ?: </label>
                            @Html.CheckBoxFor(m => m.IsWeeklyRate, new { htmlAttributes = new { @class = "form-control", @checked = true } })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    }
}