                        }
                        else
                        {
                            Html.RenderPartial("_PayrollRecordList", Model.PayrollRecords, new ViewDataDictionary() { { "outletId", Model.Outlet.Id } });
                        }
                    }*@
                    @{
                        if (hasDept)
