@model CBMS.Models.Config.ConfigUnitModel

@if (Model != null)
{
    using (Ajax.BeginForm("EditConfigUnit", new AjaxOptions { OnBegin = "OnBegin", OnComplete = "HideEditConfigUnitModal", HttpMethod = "POST", UpdateTargetId = "UnitList" }))
    {

        <div class="modal fade" id="EditConfigUnitModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Edit Unit</h4>
                    </div>
                    <div class="modal-body">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label>Unit Name: </label>
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Unit Name" } })
                        </div>
                        <div class="form-group">
                            <label>Unit Name (Chinese) : </label>
                            @Html.EditorFor(m => m.ChinName, new { htmlAttributes = new { @class = "form-control", @placeholder = "單位" } })
                        </div>
                        <div class="form-group">
                            <label>Unit Type: </label>
                            @Html.EnumDropDownListFor(m => m.unitType, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    }
}