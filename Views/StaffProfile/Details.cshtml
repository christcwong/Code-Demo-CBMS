@model CBMS.Models.Roster.StaffProfileModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

@{Html.RenderPartial("DisplayTemplates/StaffProfileDetails", Model, new ViewDataDictionary { { "Editable", true } });}

@section Scripts{
    <script type="text/javascript">
            $('[data-toggle="tab-ajax"]').click(function (e) {
                var $this = $(this),
                    loadurl = $this.attr('href'),
                    targ = $this.attr('data-target');

                $.get(loadurl, function (data) {
                    $(targ).html(data);
                });

                $this.tab('show');
                return false;
            });
    </script>
}
